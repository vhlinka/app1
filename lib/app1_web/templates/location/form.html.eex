<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <%= label f, :contract_dte, class: "control-label" %>
    <br>
    <%= date_select f, :contract_dte, class: "form-control" %>
    <%= error_tag f, :contract_dte %>
  </div>

  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= label f, :addr1, class: "control-label" %>
    <%= text_input f, :addr1, class: "form-control" %>
    <%= error_tag f, :addr1 %>
  </div>

  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= label f, :addr2, class: "control-label" %>
    <%= text_input f, :addr2, class: "form-control" %>
    <%= error_tag f, :addr2 %>
  </div>

  <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <%= label f, :city, class: "control-label" %>
    <%= text_input f, :city, class: "form-control" %>
    <%= error_tag f, :city %>
  </div>

  <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <%= label f, :state, class: "control-label" %>
    <%= text_input f, :state, class: "form-control" %>
    <%= error_tag f, :state %>
  </div>

  <div class="form-group col-lg-4 col-md-4 col-sm-4 col-xs-12">
    <%= label f, :zip, class: "control-label" %>
    <%= text_input f, :zip, class: "form-control" %>
    <%= error_tag f, :zip %>
  </div>

  <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
